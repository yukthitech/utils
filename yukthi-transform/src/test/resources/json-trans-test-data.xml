	<jel-test-bean name="includeWithReplaceAndCond">
		<context>
			{
				"ckey1": "cval1",
				"ckey2": "cval2"
			}
		</context>

		<template>
			{
				"key1": "@fmarker: ckey1",
				"@replace(wrongCond)": {
					"@condition": "ckey1 == 'diffValue'",
					"@includeResource": "/include-res.json"
				},
				"@replace(rightCond)": {
					"@condition": "ckey1 == 'cval1'",
					"@includeResource": "/include-res2.json",
					"@params": {
						"paramKey1": "paramValue"
					}
				},
				"key2": "@fmarker: ckey2"
			}
		</template>
		<expectedResult>
			{
				"key1": "cval1",
				"skey2": "fromRes2",
				"arr2": [1, 2, 3, 4],
				"pkey": "paramValue",
				"key2": "cval2"
			}
		</expectedResult>
	</jel-test-bean>

