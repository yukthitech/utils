<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="%5p %d [%t] (%F:%L) - %m%n" />
		</Console>

		<RollingFile name="RollingFile" fileName="${sys:logPath}/backup-tool.log" filePattern="${sys:logPath}/backup-tool-%d{yyyy-MM-dd}-%i.log">
			<PatternLayout>
				<pattern>%5p %d [%t] (%F:%L) - %m%n</pattern>
			</PatternLayout>
			<Policies>
				<SizeBasedTriggeringPolicy size="1 MB" />
			</Policies>
			<DefaultRolloverStrategy max="4" />
		</RollingFile>
	</Appenders>
	<Loggers>
		<Logger name="com.yukthitech" level="all" />

		<Root level="error">
			<AppenderRef ref="STDOUT" />
			<AppenderRef ref="RollingFile" />
		</Root>
	</Loggers>
</Configuration>
