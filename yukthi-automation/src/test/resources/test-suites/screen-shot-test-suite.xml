<testData xmlns:ccg="/fw/ccg/XMLBeanParser" xmlns:wrap="/fw/ccg/XMLBeanParser/wrap">
	<testSuite name="screen-shot-test-suites">

		<testCase name="screenShot">
			<description>Validates for loading the properties file</description>

			<wrap:steps>
				<ccg:gotoPage uri="/index.html" />
				<ccg:logScreenShot name="test.png" />
			</wrap:steps>

			<wrap:validations>
				<ccg:validateWithSql dataSourceName="dataSource">
					<query>
						SELECT * FROM EMPLOYEE WHERE NAME = 'employee1'
					</query>

					<expectedRow>
						<column name="NAME">employee1</column>
					</expectedRow>
				</ccg:validateWithSql>
			</wrap:validations>
		</testCase>

	</testSuite>
</testData>
