<testData xmlns:ccg="/fw/ccg/XMLBeanParser" xmlns:wrap="/fw/ccg/XMLBeanParser/wrap">
	<testSuite name="ui-test-suites">
		<testCase name="button_Click">
			<description>Validates button click action is working</description>
			
			<wrap:steps>
				<ccg:gotoPage uri="/index.html" />
				<ccg:click locator="id: button"/>
				
				<ccg:logScreenShot name="test.png" />
			</wrap:steps>
	
			<wrap:validations>
				<ccg:validateValue locator="xpath: //input[@name='statusFld']" value="button Clicked"/>
			</wrap:validations>
		</testCase>

		<cleanup>
			<ccg:quitSession/>
		</cleanup>
	</testSuite>
	
</testData>