<examples xmlns:ccg="/fw/ccg/XMLBeanParser">
	<ccg:exprPattern enabled="false"/>

	<collection name="com.yukthitech.autox.test.assertion.AssertEqualsStep">
		<example>
			<description>Any object reference can be used both for expected and actual</description>
			
			<content><![CDATA[
				<ccg:assert-equals expected="string:value" actual="string:value" />
				<ccg:assert-equals expected="int:10" actual="prop: attr.intAttr" />
			]]></content>
		</example>
	</collection>

	<collection name="com.yukthitech.autox.test.assertion.AssertFalseStep">
		<example>
			<description>Using free marker condition in the value</description>
			
			<content><![CDATA[
				<ccg:assert-false value="condition: attr.intAttr1 gt 5" />
			]]></content>
		</example>

		<example>
			<description>Any object reference expression can be used</description>
			
			<content><![CDATA[
				<ccg:assert-false value="prop: attr.flag" />
			]]></content>
		</example>
	</collection>

	<collection name="com.yukthitech.autox.test.assertion.AssertNotEqualStep">
		<example>
			<description>Any object reference expression can be used</description>
			
			<content><![CDATA[
				<ccg:assert-not-equals expected="int:11" actual="prop:attr.intAttr" />
			]]></content>
		</example>
	</collection>

	<collection name="com.yukthitech.autox.test.assertion.AssertNotNullStep">
