<testData xmlns:ccg="/fw/ccg/XMLBeanParser" xmlns:wrap="/fw/ccg/XMLBeanParser/wrap">
	<testSuite name="dml-test-suites">
		<testCase name="insert_query">
			<description>
				Validates for inserting record in a table
			</description>
		
			<!--
				This comment is to test formatting
			-->
			<wrap:steps>
				<ccg:sql-dml-query countAttribute="countAttr" dataSourceName="dataSource" failOnNoUpdate="true">
					<query>
						INSERT INTO EMPLOYEE VALUES (1, 'employee1')
					</query>
				</ccg:sql-dml-query>
			</wrap:steps>
		
			<wrap:validations>
				<ccg:sql-assert dataSourceName="dataSource">
					<query>
						SELECT * FROM EMPLOYEE WHERE NAME = 'employee1'
					</query>
				
					<expectedRow>
						<column name="NAME">employee1</column>
					</expectedRow>
				</ccg:sql-assert>

				<ccg:sql-assert-value dataSourceName="dataSource" expectedValue="int: 1">
					<query>
						SELECT count(*) FROM EMPLOYEE WHERE NAME = 'employee1'
					</query>
				</ccg:sql-assert-value>
			</wrap:validations>
		</testCase>
	
		<testCase dependencies="insert_query" name="update_query">
			<description>
				Validates for updating record in a table
			</description>
		
			<wrap:steps>
				<ccg:set expression="empId" value="1"/>
			
				<ccg:sql-dml-query countAttribute="updateCount" dataSourceName="dataSource">
					<query>
						UPDATE EMPLOYEE SET NAME = 'employee2' WHERE ID = ${attr.empId}
					</query>
				</ccg:sql-dml-query>
			</wrap:steps>
		
			<wrap:validations>
				<ccg:assert-equals actual="attr: updateCount" expected="int: 1"/>
			</wrap:validations>
		</testCase>
	
		<testCase dependencies="insert_query" name="delete_query">
			<description>
				Validates for deleting record in a table
			</description>
		
			<wrap:steps>
				<ccg:set expression="empId" value="int: 1"/>
			
				<ccg:sql-dml-query countAttribute="deleteCount" dataSourceName="dataSource">
					<query>
						DELETE FROM EMPLOYEE WHERE ID = ?{attr.empId}
					</query>
				</ccg:sql-dml-query>
			</wrap:steps>
		
			<wrap:validations>
				<ccg:assert-equals actual="attr: deleteCount" expected="int: 1"/>
			</wrap:validations>
		</testCase>
	
		<testCase name="multiple_query">
			<description>
				Validates for executing multiple query in table
			</description>
		
			<wrap:steps>
				<ccg:sql-multi-dml-query dataSourceName="dataSource">
					<query>
						INSERT INTO EMPLOYEE VALUES (1, 'employee1')
					</query>
				
					<query>
						INSERT INTO EMPLOYEE VALUES (3, 'employee2')
					</query>
				</ccg:sql-multi-dml-query>
			</wrap:steps>
		
			<wrap:validations>
				<ccg:sql-assert dataSourceName="dataSource">
					<query>
						SELECT COUNT(*) COUNT FROM EMPLOYEE WHERE ID &gt;= 1
					</query>
				
					<expectedRow>
						<column name="COUNT">2</column>
					</expectedRow>
				</ccg:sql-assert>
			</wrap:validations>
		</testCase>
	
		<testCase dependencies="multiple_query" name="column_list_query">
			<description>
				Validates for executing column-list query
			</description>
		
			<wrap:steps>
				<ccg:sql-load-query-column-list contextAttribute="empNames" dataSourceName="dataSource">
					<query>
						SELECT NAME
						FROM EMPLOYEE
						WHERE NAME IN ('employee1', 'employee2')
						ORDER BY NAME
					</query>
				</ccg:sql-load-query-column-list>
			</wrap:steps>
		
			<wrap:validations>
				<ccg:assert-equals actual="attr: empNames" expected="list: employee1, employee2"/>
			</wrap:validations>
		</testCase>
	
		<testCase dependencies="insert_query" name="fetch_value_query">
			<description>
				Validates fetching single value from query is working as expected
			</description>
		
			<wrap:steps>
				<ccg:sql-fetch-value-query contextAttribute="empId" dataSourceName="dataSource">
					<query>
						SELECT ID
						FROM EMPLOYEE
						WHERE NAME = 'employee1'
					</query>
				</ccg:sql-fetch-value-query>
			</wrap:steps>
		
			<wrap:validations>
				<ccg:assert-equals actual="attr: empId" expected="int: 1"/>
			</wrap:validations>
		</testCase>
	</testSuite>
</testData>