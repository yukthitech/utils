<testData xmlns:ccg="/fw/ccg/XMLBeanParser" xmlns:wrap="/fw/ccg/XMLBeanParser/wrap">
	<testSuite name="ui-test-suites">
		<testCase name="button_Click">
			<description>Validates button click action is working</description>
			
			<wrap:steps>
				<ccg:gotoPage uri="/index.html" />
				<ccg:isVisible locator="id: testLayer" name="visibFlag1"/>
				
				<ccg:click locator="id: button"/>
				<ccg:sleep time="1000"/>
				
				<ccg:logScreenShot name="test.png" />
				
				<ccg:isVisible locator="id: testLayer" name="visibFlag2"/>
				<ccg:getUiValue locator="xpath: //input[@name='statusFld']" name="fldValue"/>
			</wrap:steps>
	
			<wrap:validations>
				<ccg:validateValue locator="xpath: //input[@name='statusFld']" value="button Clicked"/>
				<ccg:validateContextParam expression="attr.visibFlag1" value="false"/>
				<ccg:validateContextParam expression="attr.visibFlag2" value="true"/>
				<ccg:validateContextParam expression="attr.fldValue" value="button Clicked"/>
			</wrap:validations>
		</testCase>

		<testCase name="fillForm">
			<description>Validates form filling is working</description>
			
			<ccg:gotoPage uri="/form.html" />

			<ccg:fillForm locator="id:sampleForm">
				<data>
					{
						"name": "kranthi",
						"id:genderDropDown": "male",
						"address": "line1\nline2",
						"color": ["red", "green", "blue"]
					}
				</data>
			</ccg:fillForm>
			
			<ccg:logScreenShot name="filledForm.png" />
							
			<ccg:validateValue locator="xpath: //input[@name='name']" value="kranthi"/>
		</testCase>

		<testCase name="uiGetElements">
			<description>Validates get elements is working</description>
			
			<ccg:gotoPage uri="/form.html" />
			
			<ccg:ui-get-elements locator="xpath: //input[@type='checkbox']" name="checkBoxes"/>
			
			<ccg:set name="values" value=""/>
			
			<ccg:forEach expression="attr.checkBoxes" loopVar="cbox">
				<ccg:set name="values" value="${attr.values},${uiElemAttr('cbox', 'value')}"/>
			</ccg:forEach>

			<ccg:validateContextParam expression="attr.values" value=",red,green,blue,yellow,orange"/>
		</testCase>

		<testCase name="uiMethods">
			<description>Validates functionality of free marker methods</description>
			
			<ccg:gotoPage uri="/form.html" />
			
			<ccg:set name="result" value="false"/>
			<ccg:set name="locator" value="xpath: //input[@type='checkbox']"/>
			
			<ccg:if condition="uiIsVisible(attr.locator, null)">
				<then>
					<ccg:set name="result" value="true"/>
				</then>
			</ccg:if>
			
			<ccg:validateContextParam expression="attr.result" value="true"/>
		</testCase>

		<testCase name="testDownload">
			<description>Validates download functionality</description>
			
			<ccg:gotoPage uri="/form.html" />
			
			<ccg:ui-clickAndDownload locator="id: downloadLink" pathName="filePath"/>
						
			<ccg:validateFileExists path="${attr.filePath}"/>
		</testCase>

		<cleanup>
			<ccg:quitSession/>
		</cleanup>
	</testSuite>
	
</testData>